<div class="container-fluid mt-5 d-flex justify-content-center align-items-center flex-column">

  <div class="container filter-cont text-dark mb-2 w-100 text-responsive">
            
        <h2>View All Listed Job Profiles</h2>
        <div class="container-fluid d-flex flex-row justify-content-end align-content-center  w-100">
            <form action="" method="post" class="d-flex flex-row justify-content-end align-content-center w-100 py-3 border-bottom">
                <div class="filter_sort text-responsive d-flex flex-row justify-content-end align-items-center border border-secondary mx-2 p-1 rounded-3">
                    <button class="btn btn-secondary rounded-2 mx-1" type="submit" value="">All</button>     
                    <button class="btn btn-secondary rounded-2 mx-1" type="submit" value="recent">Recent</button>     
                    <button class="btn btn-secondary rounded-2  mx-1" type="submit" value="populer">Populer</button>     
                    <button class="btn btn-secondary rounded-2 mx-1" type="submit" value="recemended">Recommend</button>     
                </div>
                <div class="w-25 border border-secondary rounded-3 px-2 py-1" style="">
                    <div class=" d-flex flex-row">
                      <input id="search-input" type="search" id="form1" class="form-control" />
                      <!-- <label class="form-label" for="form1">Search</label> -->
                      <button id="search-button" type="button" class="btn btn-secondary mx-1">
                        <i class="fas fa-search"></i>
                      </button>
                    </div>
                   
                  </div>            
            </form>
            
        </div>
  </div>
  <div class="container row d-flex justify-content-center align-items-center mt-2" id="myTable">
      <!-- Job Card 1 -->
      <% locals.jobs.forEach((obj)=>{ %>

      <div class="col-md-4 mb-4 job_card">
          <div class="card pb-2" style="background-color: #2d3436;box-shadow: rgba(0, 0, 0, 0.24) 0px 3px 8px; color: white; border-radius:20px;">
              <div class="card-body row p-0 mt-2 mx-1 d-flex flex-row justify-content-start align-items-center p-2 rounded-pill">

                   <div class="col-2 d-flex justify-content-start align-items-center">
                       <img src="/img/user_logo.jpg" class="card-img-top" alt="Logo Image" style="height: 45px; width: 45px; border-radius: 50%;">
                   </div>

                  <div class=" col-8 d-flex flex-column justify-content-start align-items-start rounded rounded-pill m-1 pr-2">
                      <span class="text-responsive m-0 p-0 "><%=obj.job_title%></span>
                      <span class="text-responsive m-0 p-0">@<%=obj.company_name%></span>
                  </div>


              </div>
              <div class="card-body rounded d-flex flex-column align-items-start py-2 ">
                  <p class="text-left text-responsive p-0 m-0"><%=obj.job_desc%></p>
              </div>
              
              <div class="card-body rounded d-flex flex-row align-items-center justify-content-around  py-2 text-muted">
                      <span class="btn-sm btn-info p-0 m-0 px-2 text-responsive rounded rounded-pill p-1 border border-info"><strong>full time</strong></span>
                      <span class="btn-sm btn-light p-0 m-0 px-2 text-lowercase text-responsive rounded rounded-pill p-1 border border-light"><strong>full time</strong></span>
                      <span class="btn-sm btn-success p-0 m-0 px-2 text-lowercase text-responsive rounded rounded-pill p-1 border border-success"><strong>full time</strong></span>
              </div>
              <div class="card-body rounded d-flex flex-row align-items-center justify-content-between  py-2 text-muted">

                  <span class="btn-sm btn-primary p-1 px-4 text-responsive rounded rounded-pill border border-primary"><strong><i class="fa-solid fa-indian-rupee-sign "></i>50,000</strong></span>

                  <span class="btn-sm btn-warning p-1 px-4 text-responsive rounded rounded-pill border border-warning"><a href="/jobs/<%=obj.job_id%>">Details</a></span>

                  <span class="btn-sm btn-secondary p-1 px-4 text-responsive rounded rounded-pill border border-secondary"><strong>Apply</strong></span>
                  
          </div>

          </div>
      </div>

      <%  })  %>

  </div>
  <div class="container mt-2 w-100 ">
    <div class="container-fluid text-light w-100 text-responsive d-flex justify-content-end align-items-center">
          <nav aria-label="Page navigation example">
            <ul class="pagination">
              <li class="page-item">
                <a class="page-link" href="#" aria-label="Previous">
                  <span aria-hidden="true">&laquo;</span>
                  <span class="sr-only">Previous</span>
                </a>
              </li>
              <li class="page-item"><a class="page-link" href="#">1</a></li>
              <li class="page-item"><a class="page-link" href="#">2</a></li>
              <li class="page-item"><a class="page-link" href="#">3</a></li>
              <li class="page-item">
                <a class="page-link" href="#" aria-label="Next">
                  <span aria-hidden="true">&raquo;</span>
                  <span class="sr-only">Next</span>
                </a>
              </li>
            </ul>
          </nav>
    </div>
  </div>
  
</div>


